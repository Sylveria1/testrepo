<%- include('../partials/header') %>
<h1>Admin Orders Management</h1>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>User ID</th>
            <th>Total Price</th>
            <th>Status</th>
            <th>Order Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% orders.forEach(order => { %>
        <tr>
            <td><%= order.id %></td>
            <td><%= order.user_id %></td>
            <td><%= order.total_price %></td>
            <td><%= order.status %></td>
            <td><%= order.order_number %></td>
            <td>
                <a href="/admin/orders/edit/<%= order.id %>">Edit</a>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
<%- include('../partials/footer') %>
